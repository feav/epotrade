	<div class="text-guide">Choisissez un type de document et téléchargez en conséquence</div>
	<div class="piece-load-wrapper">
		<div class="img-type_piece">
			<img src="{{asset('images/thumb_doc.png')}}">
			<ul class="type-piece">
				<li class="piece-item">Facture d'utilité</li>
				<li class="piece-item">Relevé bancaire</li>
				<li class="piece-item">Certificat de résidence</li>
			</ul>
		</div>
		<div class="wrap-load-action">
			<input type="file" name="residence" id="residence" class="input-residence" style="display: none;" onchange="readURL(this);">
			<label for="residence" class="label-identite">
				<div class="content-waiting">
					<i class="fa fa-upload"></i><br>
					<span style="display: block;line-height: 12px;">Télécharger</span>
				</div>
				<div class="content-loaded">
					<i class="fa fa-file"></i>
					<span style="display: block;line-height: 12px;"><span class="file-name-residence">doc... </span><i class="fa fa-check-circle"></i></span>
				</div>
			</label>	
		</div>
	</div>
	<div class="text-important" style="color: #e40606">
		IMPORTANT: Le nom sur le document DOIT clairement indiquer votre nom complet.
	</div>
</form>
<script type="text/javascript">
	function readURL(input) {
      	if (input.files && input.files[0]) {
	        var reader = new FileReader();
	        reader.onload = function (e) {
	          	/*console.log(e.target);*/
	          	var str = input.files[0].name;
  				var docName = str.substr(0, 4);
  				var idElt = input.getAttribute('id');
  				console.log(idElt);
  				$('#identiteForm #'+idElt).next().addClass('loaded');
  				$('#identiteForm .'+idElt+'-wrapper .alert-msg').addClass('loaded');
  				$('#identiteForm .file-name-'+idElt).text(docName+'...');
	        };
	        reader.readAsDataURL(input.files[0]);
      	}
    }
</script>